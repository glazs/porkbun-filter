{
    "manifest_version": 3,
    "name": "Porkbun Search Price Filter",
    "version": "1.1",
    "description": "Filters Porkbun search results by purchase and renewal price",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://porkbun.com/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "filter.js"
            ],
            "matches": [
                "https://porkbun.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "porkbun-filter@torchkoff",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}